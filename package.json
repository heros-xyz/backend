{
  "name": "heros-backend",
  "private": true,
  "repository": "https://gitlab.com/criptoladrillo/admin-panel",
  "scripts": {
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --ext .ts . --fix",
    "test": "mocha --require ts-node/register **/*.test.ts",
    "test:watch": "mocha --require ts-node/register **/*.test.ts -w",
    "build": "tsc",
    "watch": "tsc -w",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions --project heros-dev-386505",
    "logs": "firebase functions:log",
    "emulators": "yarn watch | firebase emulators:start --only auth,firestore,functions,storage --inspect-functions  --project heros-dev-386505 --import emulators_base_data --export-on-exit"
  },
  "engines": {
    "node": "18"
  },
  "main": "dist/index.js",
  "dependencies": {
    "@sendgrid/helpers": "^7.7.0",
    "@sendgrid/mail": "^7.7.0",
    "bignumber.js": "^9.1.1",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.6",
    "firebase-admin": "^11.5.0",
    "firebase-functions": "^4.1.1",
    "speakeasy": "^2.0.0",
    "stripe": "^12.5.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/sinon": "^10.0.15",
    "@types/speakeasy": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "@typescript-eslint/typescript-estree": "^5.48.1",
    "chai": "^4.3.7",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.26.0",
    "firebase-functions-test": "^3.1.0",
    "fireway": "^1.1.0",
    "mocha": "^10.2.0",
    "readline": "^1.3.0",
    "sinon": "^15.0.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.3.5"
  }
}
